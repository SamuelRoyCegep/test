import java.awt.Color;

public class Pool 
{
	protected int price;
	protected int size;
	private static Color color;
	public Pool(String size)
	{
	}
	
	private void setColor(Color color) 
	{
	}

	private void setSize(String size) 
	{
		if(size == "P")
		{
			this.size = 15;
		}else if(size == "G")
		{
			this.size = 28;
		}else
		{
			throw new RunTimeException();
		}
	}

	private void setPrice() 
	{
		if(this.size == 15)
		{
			this.price = 3000;
		}else if(this.size == 28)
		{
			this.price = 5000;
		}
	}

	public int commandes()
	{
		return price;
	}
}


public class ChezRoger 
{
	private int price;
	private int size;
	private String color;
	public ChezRoger(String size, String color)
	{
		this.setSize(size);
		this.setColor(color);
		this.setPrice();
	}
	
	private void setColor(String color) 
	{
		if(color == "bleu" || color == "noir" || color == "sable" || color == "blanc")
		{
			this.color = color;
		}else
		{
			throw new RunTimeException();
		}
	}

	private void setSize(String size) 
	{
		if(size == "P")
		{
			this.size = 15;
		}else if(size == "G")
		{
			this.size = 28;
		}else
		{
			throw new RunTimeException();
		}
	}

	private void setPrice() 
	{
		if(this.size == "P")
		{
			this.price = 3000;
		}else if(this.size = "G")
		{
			this.price = 5000;
		}
	}

	public void commandes()
	{
	
	}
	System.out.print
}
